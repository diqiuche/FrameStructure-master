<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/common_match_parent"
    android:background="@color/common_loading_dialog_windowp_bg"
    android:gravity="center"
    android:orientation="vertical">


    <com.common.view.roundview.RoundLinearLayout
        android:layout_width="@dimen/common_size_minwidth_svprogresshuddefault"
        android:layout_height="@dimen/common_size_minwidth_svprogresshuddefault"
        android:orientation="vertical"
        android:gravity="center"
        rv:rv_backgroundColor="@color/common_loading_dialog_content_bg"
        rv:rv_cornerRadius="@dimen/common_border_radius"
        android:padding="@dimen/common_padding_svprogresshuddefault">

        <ImageView
            android:id="@+id/ivBigLoading"
            android:layout_width="@dimen/common_size_image_bigloading"
            android:layout_height="@dimen/common_size_image_bigloading"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="@string/common_loading"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_size_four_level" />

    </com.common.view.roundview.RoundLinearLayout>
</LinearLayout>