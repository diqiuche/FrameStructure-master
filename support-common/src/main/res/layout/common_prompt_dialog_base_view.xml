<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="20px"
        android:textColor="@color/common_prompt_dialog_title_txt"
        android:text="@string/common_prompt_dialog_title"
        android:textSize="@dimen/common_size_one_level" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_split_line_size"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="18px"
        android:background="@color/common_split_bg"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_content"
        style="@style/common_match_parent_with"
        android:gravity="center"
        android:paddingBottom="20px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:paddingTop="20px"
        android:textColor="@color/common_prompt_dialog_content_txt"
        android:textSize="@dimen/common_size_three_level" />
</LinearLayout>





