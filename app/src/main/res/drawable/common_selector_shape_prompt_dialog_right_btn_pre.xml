<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框设置 -->
    <item>
        <shape>
            <!-- 连框颜色值 -->
             <solid android:color="@color/common_prompt_dialog_border" />

            <!-- 边框四圆角设置 -->
            <corners
                android:bottomLeftRadius="@dimen/space_0"
                android:bottomRightRadius="@dimen/common_prompt_dialog_border_radius"
                android:topLeftRadius="@dimen/space_0"
                android:topRightRadius="@dimen/space_0" />
        </shape>
    </item>
    <!-- 主体背景颜色设置 -->
    <item
        android:bottom="@dimen/common_prompt_dialog_border_size"
        android:left="@dimen/space_0"
        android:right="@dimen/common_prompt_dialog_border_size"
        android:top="@dimen/space_0">
        <shape>
            <!-- 主体颜色值 -->
            <solid android:color="@color/common_prompt_dialog_btn_pre" />

            <!-- 主体边框四圆角设置 -->
            <corners
                android:bottomLeftRadius="@dimen/space_0"
                android:bottomRightRadius="@dimen/common_prompt_dialog_border_radius"
                android:topLeftRadius="@dimen/space_0"
                android:topRightRadius="@dimen/space_0" />
        </shape>
    </item>

</layer-list>